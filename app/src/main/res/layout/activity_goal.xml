<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/tvGoalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите вашу цель"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:textAlignment="center" />

        <!-- Кнопки с длинным текстом -->
        <Button
            android:id="@+id/btnGoalLose"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Похудение\nСнижение жира, дефицит калорий"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnGoalGain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Набор массы\nРост мышц, профицит калорий"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGoalMaintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поддержание формы\nСтабильный вес и энергия"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGoalHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Улучшить здоровье\nЗОЖ, ЖКТ, иммунитет"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGoalEnergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Больше энергии"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Кнопка Далее с отступами -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#2E7D32"
            android:text="Далее"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>