<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_health_index"
                android:layout_marginEnd="8dp"
                android:contentDescription="Индекс" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Что такое индекс здоровья?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Индекс здоровья — это общий показатель всего суточного меню.\n\nОн отражает потребление полезных и вредных продуктов, а также степень промышленной переработки."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="12dp" />

        <!-- Красная миска -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/m1"
                android:layout_marginEnd="12dp"
                android:contentDescription="Красная миска" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0,5–2,5 означает, что это неполезные продукты и следует избегать их потребления"
                android:textColor="@color/health_red"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Жёлтая миска -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/m2"
                android:layout_marginEnd="12dp"
                android:contentDescription="Жёлтая миска" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2,6–4,4 означает, что эти продукты можно потреблять, но рекомендуется ограничить"
                android:textColor="@color/health_yellow"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Зелёная миска -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/m3"
                android:layout_marginEnd="12dp"
                android:contentDescription="Зелёная миска" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4,5–5 означает, что эти продукты полезны и идеально подходят для вашего здоровья"
                android:textColor="@color/health_green"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Мотивационное сообщение -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="С нами вы можете проверить любое блюдо или продукт — будьте здоровы и уверены в своём выборе!"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
